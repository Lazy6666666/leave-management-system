# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy to .env.local and fill in actual values
# Never commit .env.local or files with real secrets to version control

# Environment
NODE_ENV=development

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
# Get from Supabase Dashboard > Settings > API
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# =============================================================================
# APPLICATION
# =============================================================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="Leave Management System"
NEXT_PUBLIC_VERSION=1.0.0

# =============================================================================
# AUTHENTICATION
# =============================================================================
# Generate with: openssl rand -base64 32
JWT_SECRET=your-jwt-secret-here
SESSION_MAX_AGE=2592000

# =============================================================================
# EMAIL SERVICE (Optional)
# =============================================================================
SENDGRID_API_KEY=your_sendgrid_api_key_here
MAILGUN_API_KEY=your_mailgun_api_key_here
MAILGUN_DOMAIN=your_mailgun_domain_here

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
# Sentry error tracking
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn_here

# Google Analytics
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# =============================================================================
# SECURITY
# =============================================================================
# CORS allowed origins (comma-separated)
CORS_ORIGINS=https://yourdomain.com

# =============================================================================
# FEATURE FLAGS
# =============================================================================
NEXT_PUBLIC_FEATURE_DOCUMENTS=true
NEXT_PUBLIC_FEATURE_NOTIFICATIONS=true

# =============================================================================
# DEVELOPMENT
# =============================================================================
NEXT_TELEMETRY_DISABLED=1
DEBUG=false

# =============================================================================
# PRODUCTION
# =============================================================================
# CDN URL (if using)
# NEXT_PUBLIC_CDN_URL=https://cdn.your-domain.com

# =============================================================================
# FILE STORAGE
# =============================================================================
NEXT_PUBLIC_STORAGE_BUCKET=company-documents
MAX_FILE_SIZE=5242880

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000
