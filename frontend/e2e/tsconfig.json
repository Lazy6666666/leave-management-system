{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "../.ts-out",
    "types": ["node", "@playwright/test"],
    "lib": ["es2020", "dom"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["../frontend/*"]
    }
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
}
