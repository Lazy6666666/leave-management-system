{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "types": ["@playwright/test", "@axe-core/playwright"],
    "moduleResolution": "bundler",
    "module": "ESNext",
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "isolatedModules": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "**/*.ts",
    "**/*.spec.ts",
    "**/*.setup.ts",
    "fixtures/**/*",
    "utils/**/*"
  ],
  "exclude": ["node_modules"]
}
